<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="@color/black_shade_2"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_4sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notes_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="@dimen/_4sdp"
            android:scrollHorizontally="true"
            android:text="@string/note_title"
            android:textColor="@color/white"
            android:layout_toLeftOf="@id/delete_button_iv"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/time_stamp_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last updated:"
            android:layout_toLeftOf="@id/delete_button_iv"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/white"
            android:layout_below="@id/notes_title_tv"
            android:layout_margin="@dimen/_4sdp"
            android:padding="@dimen/_4sdp"/>

        <ImageView
            android:id="@+id/delete_button_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_4sdp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>